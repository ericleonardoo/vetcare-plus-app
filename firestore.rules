
rules_version = '2';

// As regras abaixo garantem que apenas usuários autenticados podem acessar o
// banco de dados, e que usuários só podem modificar seus próprios dados.
service cloud.firestore {
  match /databases/{database}/documents {

    // Função auxiliar para verificar se o usuário autenticado tem a role de 'professional'
    function isProfessional() {
      return get(/databases/$(database)/documents/tutors/$(request.auth.uid)).data.role == 'professional';
    }

    // Coleção 'tutors' (que inclui clientes e profissionais)
    match /tutors/{userId} {
      // Qualquer um pode criar seu próprio perfil (cadastro).
      allow create: if request.auth != null;
      // Um usuário só pode ler ou atualizar seu próprio perfil.
      // Um profissional pode ler qualquer perfil.
      allow read, update: if request.auth.uid == userId || isProfessional();
    }

    // Coleção 'pets'
    match /pets/{petId} {
      // Um usuário só pode ler ou deletar os pets que pertencem a ele.
      // Um profissional pode ler ou deletar qualquer pet.
      allow read, delete: if resource.data.tutorId == request.auth.uid || isProfessional();
      // Um usuário só pode criar/atualizar pets para si mesmo.
      // Um profissional pode criar/atualizar qualquer pet.
      allow create, update: if request.resource.data.tutorId == request.auth.uid || isProfessional();
    }

    // Coleção 'appointments'
    match /appointments/{appointmentId} {
        // Um profissional pode ler, criar, atualizar ou deletar qualquer agendamento.
        allow read, create, update, delete: if isProfessional();
        // Um cliente pode ler ou criar seus próprios agendamentos.
        allow read, create: if request.auth.uid == request.resource.data.tutorId;
        // Um cliente pode ler seus agendamentos existentes.
        allow read: if request.auth.uid == resource.data.tutorId;
    }

    // Coleção 'invoices' (Faturas)
    match /invoices/{invoiceId} {
      // Um profissional pode gerenciar completamente as faturas.
      allow read, create, update, delete: if isProfessional();
      // Um cliente só pode ler as faturas que pertencem a ele.
      allow read: if resource.data.clientId == request.auth.uid;
    }
    
    // Coleção 'inventory' (Estoque)
    match /inventory/{itemId} {
        // Apenas profissionais podem ler e escrever no estoque.
        allow read, write: if isProfessional();
    }
  }
}
